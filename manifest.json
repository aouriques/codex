{
  "manifest_version": 3,
  "name": "Auto Scroller",
  "version": "1.0",
  "description": "Scroll a page automatically at a custom speed after opening a URL.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Scroller"
  },
  "permissions": [
    "scripting",
    "tabs",
    "tabCapture",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
